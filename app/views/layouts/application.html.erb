<!DOCTYPE html>
<html>
  <head>
    <title>CloneInsta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <div class="row d-flex justify-content-center">
        <% flash.each do |key, value|%>
        <div class="alert alert-info col-6 position-fixed mt-3 alert-dismissible fade show" role="alert" style="z-index: 100;">
          <%= content_tag(:span, value, class: "#{key}") %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% end%>
      </div>
    </div>
    <% if @user %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>
    <% if current_user %>
      <div class="header_container position-fixed w-100">
        <header  class="mx-auto header d-flex justify-content-between align-items-center p-3">
          <div>
            <%= image_tag("inta.png", :alt => "logo", :width => "100") %>
          </div>
          <div>
            <input type="text" class="d-none d-md-inline" placeholder="Rechercher sur Instagram">
          </div>
          <div class="d-flex">
            <div class="mx-2"><%= link_to posts_path do %><i class="bi bi-house-door"></i><% end %></div>
            <div class="mx-2"><i class="bi bi-chat"></i></i></div>
            <div class="mx-2"><i class="bi bi-compass"></i></div>
            <div class="mx-2"><i class="bi bi-heart"></i></div>
            <div class="mx-2 position-relative" id="profil">
              <div class="profil_image" style="width: 30px; height: 30px; background-image: url(<%= current_user.image.url %>);"></div>
              <ul class="position-absolute top-100 list-unstyled collapse" id="drop_down_profil">
                <li class="py-1 d-flex align-items-center"><i class="m-2 bi bi-person-circle"></i><%= link_to "Profil", user_path(current_user.id), class: "flex-grow-1" %></li>
                <li class="py-1 d-flex align-items-center"><i class="m-2 bi bi-bookmark"></i>Enregistré</li>
                <li class="py-1 d-flex align-items-center"><i class="m-2 bi bi-gear-wide"></i>Paramètre</li>
                <li class="py-1 d-flex align-items-center"><i class="m-2 bi bi-arrow-repeat"></i>Changer de compte</li>
                <li class="py-1 d-flex align-items-center border-top"><%= link_to "Se déconnecter", destroy_session_path, class: "m-2 flex-grow-1" %></li>
              </ul>
            </div>
          </div>
        </header>
      </div>
    <% end %>
    <div class="main_container">
      <%= yield %>
    </div>
  </body>
</html>
