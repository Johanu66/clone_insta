<%= form_with(model: post, local: true, url: url_form) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" style="color: red;">
      <h3><%= pluralize(post.errors.count, "erreur") %> interdit l'enregistrement de ce post</h3>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field m-5">
    <label for="title">Titre</label>
    <%= form.text_field :title, class: "form-control", id: "title", placeholder: "Titre" %>
  </div>

  <div class="form-group field m-5">
    <label for="content">Contenu</label>
    <%= form.text_area :content, class: "form-control", id: "content", placeholder: "Contenu" %>
  </div>

  <div class="form-group field m-5">
    <label for="image">Image</label>
    <%= form.file_field :image, class: "form-control", id: "image", placeholder: "Image" %>
  </div>

  <div class="actions m-5">
    <%= form.submit text_submit, class: "btn btn-primary" %>
  </div>
<% end %>