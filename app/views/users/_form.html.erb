<%= form_with(model: user, local: true) do |form| %>

  <div class="field">
    <%= form.text_field :name, placeholder: "Nom" %>
  </div>

  <div class="field">
    <%= form.text_field :email, placeholder: "Adresse email" %>
  </div>

  <% if action_name == 'new' || action_name == 'create' %>
    <div class="field">
      <%= form.password_field :password, placeholder: "Mot de passe" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit submit_text, class: "btn btn-primary text-white my-3 yet_a_compte" %>
  </div>

  <% if action_name == 'new' || action_name == 'create' %>
    <%= link_to "J'ai déjà un compte", new_session_path, class: "btn btn-primary text-white my-3 yet_a_compte" %>
  <% end %>
<% end %>
