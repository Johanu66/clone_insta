<%= form_with(model: user, local: true, class: "form") do |form| %>
    <div class="p-5 border" style="background-color: white;">
        <div>
            <%= image_tag("inta.png", style: "width: 100%") %>
        </div>

        <div class="field my-3">
            <%= form.text_field :name, placeholder: "Nom", class: "form-control" %>
        </div>

        <div class="field my-3">
            <%= form.text_field :email, placeholder: "Adresse email", class: "form-control" %>
        </div>

        <div class="field my-3">
          <%= form.password_field :password, placeholder: "Mot de passe", class: "form-control" %>
        </div>

        <div class="field my-3">
          <%= form.file_field :image, class: "form-control" %>
        </div>

        <div class="actions my-3">
            <%= form.submit submit_text, class: "btn btn-primary text-white my-3 yet_a_compte w-100" %>
        </div>

        <%= link_to "J'ai déjà un compte", new_session_path, class: "btn btn-primary text-white my-3 yet_a_compte w-100" %>
    </div>
<% end %>